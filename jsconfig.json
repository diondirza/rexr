{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "target": "es2018",
    "paths": {
      "@/*": ["./client/*"],
      "@assets/*": ["./client/assets/*"],
      "@components/*": ["./client/components/*"],
      "@context/*": ["./client/context/*"],
      "@helpers/*": ["./client/helpers/*"],
      "@hooks/*": ["./client/hooks/*"],
      "@routes/*": ["./client/routes/*"],
      "@store/*": ["./client/redux/modules/*"],
      "@styles/*": ["./client/styles/*"]
    }
  },
  "exclude": ["build", "docker", "node_modules"]
}
