# ------------------------------------------------------------
# App configuration
# ------------------------------------------------------------
ENV=development
HOST=localhost
PORT=3000
PUBLIC_PATH=http://localhost:3001/

# Session Redis Service
REDIS.SESSION.HOST=127.0.0.1
REDIS.SESSION.PORT=6379
REDIS.SESSION.NO_READY_CHECK=true

# Cookies
COOKIE.DOMAIN=.rexr.com

# CLIENT DEV SERVER depends on your development environment
CLIENT.HOST=localhost
CLIENT.PORT=3001

# Logger Status
FLAGS.LOGGER=true
LOG_CONFIG={"base":{"service":"rexr"},"level":"error","prettyPrint":true}

# html cache status for ssr
DISABLE_CACHE=true

# SSR status
SSR_STATUS=true


